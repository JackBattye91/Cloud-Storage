@rendermode InteractiveServer

<MudAppBar>
    <MudIconButton Icon="@Icons.Material.Filled.Menu"  OnClick="@((e) => DrawerToggle())" />
    Cloud Storage
</MudAppBar>

<MudDrawer @bind-Open="@_drawerOpen" Anchor="Anchor.Start" Width="250px" Height="100vh" Variant="@DrawerVariant.Temporary">
    <MudDrawerContainer>
        <MudNavMenu>
            <MudNavLink Href="/Storage" Match="NavLinkMatch.All">Storage</MudNavLink>
            <MudNavLink Href="/account" Match="NavLinkMatch.Prefix">Account</MudNavLink>
            <MudNavGroup Title="Settings" Expanded="true">
                <MudNavLink Href="/users"  Match="NavLinkMatch.Prefix">Account</MudNavLink>
                <MudNavLink Href="/security"  Match="NavLinkMatch.Prefix">Security</MudNavLink>
            </MudNavGroup>
            <MudNavLink Href="/about"  Match="NavLinkMatch.Prefix">About</MudNavLink>
        </MudNavMenu>
    </MudDrawerContainer>
</MudDrawer>


@code {
    bool _drawerOpen { get; set; } = false;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }

}