
<MudItem xs="6" sm="4" md="3" lg="3" @onclick="OnClick">
    <MudStack Class="pb-5">
        <MudItem Class="text-center">
            <MudIcon Style="height: 100px; max-width: 100%" Icon="@Icons.Material.Filled.Folder" />
        </MudItem>

        <MudItem>
            <MudText Align="Align.Center">@FolderName</MudText>
        </MudItem>
    </MudStack>
</MudItem>

@code {
    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

    [Parameter]
    public string FolderName { get; set; } = "New Folder";
}
